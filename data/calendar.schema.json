{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Zephon Calendar Events",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "title",
      "date",
      "time",
      "timezone",
      "type",
      "company",
      "notes",
      "recurring",
      "alert",
      "source_url"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "time": {
        "type": "string",
        "pattern": "^\\d{2}:\\d{2}$"
      },
      "timezone": {
        "type": "string",
        "const": "UTC"
      },
      "type": {
        "type": "string",
        "enum": [
          "earnings",
          "meeting",
          "deadline",
          "reminder"
        ]
      },
      "company": {
        "type": [
          "string",
          "null"
        ]
      },
      "notes": {
        "type": "string"
      },
      "recurring": {
        "type": "boolean"
      },
      "alert": {
        "type": "string"
      },
      "source_url": {
        "type": [
          "string",
          "null"
        ],
        "format": "uri"
      }
    },
    "additionalProperties": false
  }
}